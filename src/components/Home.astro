<style>
    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
        background: #1f232d;
    }

    .img-github {
        position: fixed;
        top: 25px;
        right: 20px;
        cursor: pointer;
        z-index: 2000;
        transition: transform 0.2s ease;
    }

    .img-github svg {
        fill: white;
        display: block;
    }

    .img-github:hover {
        transform: scale(1.1);
    }

    /* 이미지 관련 */

    .img-box {
        position: relative;
        width: 32vw;
        height: 32vw;
        max-width: 300px;
        max-height: 300px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding: 5px;
    }

    .img-box::before,
    .img-box::after {
        content: '';
        position: absolute;
        width: 500px;
        height: 500px;
        background: conic-gradient(transparent, transparent, transparent, #654DD8);
        transform: rotate(0deg);
        animation: rotate 10s linear infinite;
    }

    .img-box::after {
        animation-delay: -5s;
    }

    @keyframes rotate {
        100% {
            transform: rotate(360deg);
        }
    }

    .img-item {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1;
        overflow: hidden;
    }

    .img-item img {
        position: absolute;
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        mix-blend-mode: lighten;
        border-radius: 50%;
        cursor: pointer;
        transition: transform 0.3s ease, filter 0.3s ease, box-shadow 0.3s ease;
    }

    .img-item img:hover {
        transform: scale(1.03);
        filter: brightness(1.1);
        box-shadow: 0 10px 20px rgba(101, 77, 216, 0.4);
    }

    /* 버튼 */
    .menu-btn {
        position: fixed;
        top: 20px;
        left: 20px;
        background: #654DD8;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 14px;
        font-size: 20px;
        cursor: pointer;
        z-index: 2000;
        transition: transform 0.2s ease, background 0.3s;
    }

    .menu-btn:hover {
        transform: scale(1.08);
        background: #523ac0;
    }

</style>

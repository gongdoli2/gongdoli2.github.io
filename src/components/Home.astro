<style>
    /* 전체 컨테이너 */
    .home-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
        background: #1f232d;
        gap: 80px;
        padding: 50px 20px;
        box-sizing: border-box;
    }

    .info {
        text-align: center;
        margin: 2rem 0;
        color: #ffffff;
    }

    .info h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .info p {
        font-size: 1rem;
        color: #cfcfcf;
    }

    .highlight {
        color: #654DD8;
        font-weight: bold;
    }

    /* 로고 */
    //.logo-container {
    //    width: 300px;
    //    height: 300px;
    //    background: linear-gradient(145deg, #2a2f3e, #1f232d);
    //    border-radius: 20px;
    //    display: flex;
    //    justify-content: center;
    //    align-items: center;
    //    box-shadow: 0 15px 25px rgba(101, 77, 216, 0.4);
    //    transition: transform 0.3s ease, box-shadow 0.3s ease;
    //}
    //
    //.logo-container:hover {
    //    transform: scale(1.03);
    //    box-shadow: 0 20px 30px rgba(101, 77, 216, 0.6);
    //}

    .img-box {
        position: relative;
        width: 32vw;
        height: 32vw;
        max-width: 300px;
        max-height: 300px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding: 5px;
    }

    .img-box::before,
    .img-box::after {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background: conic-gradient(transparent, transparent, transparent, #654DD8);
        transform: rotate(0deg);
        animation: rotate 10s linear infinite;
        will-change: transform;
    }

    .img-box::after {
        animation-delay: -5s;
    }

    @keyframes rotate {
        100% {
            transform: rotate(360deg);
        }
    }

    .img-item {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1;
        overflow: hidden;
    }

    .img-item img {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        mix-blend-mode: lighten;
        border-radius: 50%;
        cursor: pointer;
        transition: transform 0.3s ease, filter 0.3s ease, box-shadow 0.3s ease;
    }

    /* 팀 섹션 */
    //.team-section {
    //    display: flex;
    //    flex-direction: column;
    //    align-items: center;
    //    gap: 20px;
    //    width: 90%;
    //    max-width: 700px;
    //}
    .team-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        width: 90%;
        max-width: 900px;
        justify-items: center;
    }

    /* 팀 카드 */
    .team-card {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
        background: linear-gradient(145deg, #2a2f3e, #1f232d);
        padding: 20px;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(101, 77, 216, 0.4);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .team-card:hover {
        transform: translateY(-5px) scale(1.03);
        box-shadow: 0 15px 25px rgba(101, 77, 216, 0.6);
    }

    .team-card img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid #654DD8;
        object-fit: cover;
    }

    .team-info h1 {
        color: #fff;
        font-size: 1.2rem;
        margin: 0;
    }

    .team-info p {
        color: #ccc;
        font-size: 1rem;
        margin: 0;
    }

    /* GitHub 아이콘 */
    #githubIcon {
        position: fixed;
        top: 25px;
        right: 20px;
        cursor: pointer;
        z-index: 2000;
        transition: transform 0.2s ease, opacity 0.3s ease;
    }

    #githubIcon:hover {
        transform: scale(1.1);
    }

    #githubIcon.hidden {
        opacity: 0;
        pointer-events: none;
    }

    /* 메뉴 버튼 */
    .menu-btn {
        position: fixed;
        top: 20px;
        left: 20px;
        background: #654DD8;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 14px;
        font-size: 20px;
        cursor: pointer;
        z-index: 2000;
        transition: transform 0.2s ease, background 0.3s;
        font-weight: 500;
    }

    .menu-btn:hover {
        transform: scale(1.08);
        background: #523ac0;
    }
</style>

<script>
    window.addEventListener("DOMContentLoaded", () => {
        const menuBtn = document.getElementById("menuBtn");
        const sidebar = document.getElementById("sidebar-page");
        const githubIcon = document.getElementById("githubIcon");
        if (!menuBtn || !sidebar || !githubIcon) return;

        menuBtn.addEventListener("click", () => {
            sidebar.classList.toggle("active");
            githubIcon.classList.toggle("hidden");
            menuBtn.textContent = sidebar.classList.contains("active") ? "✖" : "☰";
        });
    });
</script>

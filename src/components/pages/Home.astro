<style>
    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* 화면 중앙 정렬 */
        text-align: center;
        background: #1f232d;
    }

    .img-box {
        position: relative;
        width: 32vw;
        height: 32vw;
        max-width: 300px;
        max-height: 300px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding: 5px;
    }

    .img-box::before,
    .img-box::after {
        content: '';
        position: absolute;
        width: 500px;
        height: 500px;
        background: conic-gradient(transparent, transparent, transparent, #654DD8);
        transform: rotate(0deg);
        animation: rotate 10s linear infinite;
    }

    .img-box::after {
        animation-delay: -5s;
    }

    @keyframes rotate {
        100% {
            transform: rotate(360deg);
        }
    }

    .img-item {
        position: relative;
        width: 100%;
        height: 100%;
        background: blue;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1;
        overflow: hidden;
    }

    .img-item img {
        position: absolute;
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        mix-blend-mode: lighten;
        border-radius: 50%;
        transition: transform 0.3s, filter 0.3s;
        cursor: pointer;
    }

    .img-item img:hover {
        transform: scale(1.05);
        filter: drop-shadow(0 0 15px rgba(101, 77, 216, 0.6));
    }
</style>

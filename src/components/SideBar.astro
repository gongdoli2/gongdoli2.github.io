---
const { show } = Astro.props;
---

<div id="sidebar-page" class={show ? "active" : ""}>
    <div class="sidebar-content">
        <h1>Sidebar Page</h1>

        <div class="sidebar-buttons">
            <button onclick="alert('버튼 1 클릭!')">버튼 1</button>
            <button onclick="alert('버튼 2 클릭!')">버튼 2</button>
            <button onclick="alert('버튼 3 클릭!')">버튼 3</button>
        </div>
    </div>
</div>

<style>
    #sidebar-page {
        position: fixed;
        top: 0;
        left: -100%;
        width: 100vw;
        height: 100vh;
        background: #1f232d;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: left 0.4s ease;
        z-index: 1500;
    }
    #sidebar-page.active {
        left: 0;
    }

    .sidebar-content {
        text-align: center;
    }

    .sidebar-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 2rem 0;
    }

    .sidebar-buttons button {
        background: #654DD8;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 1.2rem;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
    }
    .sidebar-buttons button:hover {
        background: #523ac0;
        transform: scale(1.05);
    }
</style>

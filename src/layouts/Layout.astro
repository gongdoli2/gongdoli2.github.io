---
import "../styles/global.css";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/assets/circle-logo.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
</head>

<body>
    <slot />
</body>

<footer>
    &copy; 2025 gongdoli2. All rights reserved.
</footer>

</html>

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    footer {
        text-align: center;
        margin: 0;
        color: #b8a7f5;
        padding: 1rem 0;
        font-size: 0.9rem;
        letter-spacing: 0.05em;
        border-top: 1px solid rgba(101, 77, 216, 0.35);
        background: #1e1e2f;
        box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.25);
        font-weight: 500;
    }

    nav {
        margin-top: 1rem;
        margin-bottom: 2rem;
    }
